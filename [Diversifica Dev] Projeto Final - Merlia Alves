def exibir_musicas(lista_de_musicas):
    """Permite que o usu√°rio visualize o nome das m√∫sicas que o mesmo adicionou √† lista, as numerando de forma crescente com base na ordem em que foram escritas."""
    print("\n")
    n = 1
    print("Ô∏ª" * 15)
    print("     ‚ô´ Lista de M√∫sicas ‚ô´")
    print("Ô∏º" * 15)
    for musica in lista_de_musicas:
        print(f"{n}: {musica}")
        n += 1
    print("Ô∏º" * 15)
    print("\n")

def adicionar_musica(lista_de_musicas, musica):
     """Permite que o usu√°rio adicione o nome de uma m√∫sica em uma lista pr√©-existente."""
     lista_de_musicas.append(musica)
     return lista_de_musicas

def remover_musica(lista_de_musicas, musica):
    """Permite que o usu√°rio elimine o nome de alguma m√∫sica adicionada anteriormente a partir de um n√∫mero, que √© definido pela ordem em que elas foram escritas."""
    lista_de_musicas.pop((musica - 1))
    return lista_de_musicas

def exibir_menu():
      """Permite que o usu√°rio visualize as poss√≠veis intera√ß√µes com o sistema."""
      print("Ô∏ª" * 15)
      print("   ùÑ¢ Selecione uma fun√ß√£o:")
      print("Ô∏º" * 15)
      print("„Äå1„ÄçExibir lista de m√∫sicas\n" \
    "„Äå2„ÄçAdicionar nova m√∫sica\n" \
    "„Äå3„ÄçRemover m√∫sica\n" \
    "„Äå4„ÄçSair")

# Inicializa√ß√£o de vari√°veis.
lista_de_musicas = []
continuar = True

# Mensagem inicial do sistema.
print("‚ô™¬®.¬∞Àñ*‚Ä¢..‚Ä¢*.¬∞Àñ¬®‚ô´¬®Àñ¬∞.*‚Ä¢..‚Ä¢*Àñ¬∞.¬®‚ô™")
print("   Boas vindas √† sua Lista\n  de M√∫sicas personalizada!")
print("‚ô™¬®.¬∞Àñ*‚Ä¢..‚Ä¢*.¬∞Àñ¬®‚ô´¬®Àñ¬∞.*‚Ä¢..‚Ä¢*Àñ¬∞.¬®‚ô™\n")

# Loop principal.
while continuar:
    exibir_menu()
    opcao = input("\nDigite o n√∫mero da fun√ß√£o que deseja executar aqui: ")

    if opcao == "1":
        exibir_musicas(lista_de_musicas)
    elif opcao == "2":
        musica = input("\nEscreva o nome da m√∫sica: ")
        lista_de_musicas = adicionar_musica(lista_de_musicas, musica)
        print("\nUma nova m√∫sica foi adicionada com sucesso.\n")
    elif opcao == "3":
        # A valida√ß√£o verifica se o valor √© num√©rico, se √© menor do que o limite da lista, e se √© maior do que zero.
        musica = input("\nInsira o n√∫mero da m√∫sica que deseja remover: ")
        if not musica.isnumeric():
            print("\nCaractere inv√°lido. Por favor, tente novamente.\n")
        elif int(musica) > len(lista_de_musicas):
            print("\nN√∫mero inv√°lido. Por favor, tente novamente.\n")
        elif int(musica) <= 0:
            print("\nN√∫mero inv√°lido. Por favor, tente novamente.\n")
        else:
            remover_musica(lista_de_musicas, int(musica))
            print("\nM√∫sica removida com sucesso.\n")
    elif opcao == "4":
        continuar = False
    else:
        print("\nN√∫mero inv√°lido. Por favor, tente novamente.\n")